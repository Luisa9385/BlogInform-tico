@model Articulos.Entities.Articulo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Articulo</h2>
    <hr />


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
           
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-5">                
                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
            </div>        
            
            @Html.LabelFor(model => model.Autor, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-5">                  
                    @Html.EditorFor(model => model.Autor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Autor, "", new { @class = "text-danger" })
            </div>
            <br />
            <br />
           
        </div>    
                 

        <div class="form-group">
            @Html.LabelFor(model => model.Tags, htmlAttributes: new { @class = "control-label col-md-1" })
              <div class="col-md-5">              
                @Html.EditorFor(model => model.Tags, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tags, "", new { @class = "text-danger" })
                </div>

            @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-1" })        
                <div class="col-md-5">
                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control datepicker" } })
                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                </div>
            <br />
            <br />
        </div>

      
        @Html.LabelFor(model => model.Contenido, htmlAttributes: new { @class = "control-label col-md-12" })
        <div class="col-md-12">
            @Html.TextAreaFor(model => model.Contenido, new { htmlAttributes = new { @class = "form-control", cols = "80", rows = "10" } })
            @Html.ValidationMessageFor(model => model.Contenido, "", new { @class = "text-danger" })
            <br />
           
        </div>        
        <script type="text/javascript">
            CKEDITOR.replace("Contenido");
        </script>

        <div class="form-group">
            <div align="right" class="col-md-offset-2 col-md-10">
                <input  type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
 }

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
