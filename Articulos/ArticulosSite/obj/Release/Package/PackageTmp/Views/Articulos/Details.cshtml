@model Articulos.Entities.Articulo

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Articulo</h2>
<hr />
<div>
     
    <div>
          @Html.Raw(HttpUtility.HtmlDecode(Model.Contenido))
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Autor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Autor)
        </dd>
    </dl>
      
    
</div>
<div>
    <p>
        @Html.ActionLink("Aquí puedes Comentar", "Create", new { controller = "Comentario", Articulo = Model.Id })
    </p>
</div>
<hr />
<div>
    @if (Model.Comentarios.Count > 0)
    {
        <div class="media">
            <div class="media-body">
                @foreach (var e in Model.Comentarios)
                {
                    <h4 class="media-heading">
                        @e.Nombre <small>Enviado el @e.Fecha</small>
                    </h4>
                    <div class="well well-sm">
                        @e.Contenido

                        @Html.ActionLink("Edit", "EditComentario", "Comentario", new { id = e.Id }, null) |
                        @Html.ActionLink("Delete", "DeleteComentario", "Comentario", new { id = e.Id }, null)
                    </div>
                }
            </div>
        </div>

    }
</div>
<p>
    @Html.ActionLink("Back to list", "Index")
</p>
